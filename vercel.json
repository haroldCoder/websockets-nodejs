{
    "version": 2,
    "builds": [
      {
        "src": "src/index.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["src/public/**"]
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/index.ts"
      }
    ],
    "functions": {
      "src/index.ts": {
        "rewrites": [
          {
            "source": "/(.*)",
            "destination": "/src/index.ts"
          }
        ]
      }
    }
  }